<div class="music-box">
    <div class="music-box-image">
        <%= link_to music_artist_image(artist, :style => 'min-width: 126px; max-height: 150px'), artist %>
    </div>
    <div class="music-box-detail">
        <span class="music-box-title"><%=link_to artist.name, artist %></span>
        <br/>
        <span><%= artist.album_count %> <%= "album".pluralize artist.album_count %></span>
        &ndash;
        <span><%= artist.song_count %> tracks</span>
    </div>
</div>
