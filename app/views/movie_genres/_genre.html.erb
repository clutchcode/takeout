<div class="movie" onclick="window.location='<%= url_for genre %>'">
    <div class="movie-image">
        <%= genre_thumb(genre, :class => 'movie-thumb') %>
    </div>
    <div class="movie-detail">
        <div><strong><%= link_to genre.name, genre %></strong> (<%= genre.movie_count %>)</div>
    </div>
</div>
