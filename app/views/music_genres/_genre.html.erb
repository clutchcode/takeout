<div style="width: 330px; height: 100px; border: 1px solid #d3d3d3; margin: 3px 3px 0px 0px; padding: 2px 2px 2px 2px; float: left">
    <div style="vertical-align: top; padding: 0px 10px 0px 0px; float: left;">
        <% album = genre.music_albums.first %>
        <%= link_to music_album_cover(album, :width => 100, :height => 100), album, :remote => true %>
    </div>
    <div style="vertical-align: top">
        <span style="font-size: 175%"><%=link_to genre.name, genre, :remote => true %></span>
        <br/>
        <span style=""><%= genre.artist_count %> <%= "artist".pluralize genre.artist_count %></span>
        &ndash;
        <span style=""><%= genre.album_count %> <%= "album".pluralize genre.album_count %></span>
        &ndash;
        <span style=""><%= genre.song_count %> songs</span>
    </div>
</div>
