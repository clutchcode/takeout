<div class="music-box" onclick="window.location='<%= url_for album %>'">
    <div class="music-box-image">
        <%= link_to music_album_cover(album, :width => 100, :height => 100), album %>
    </div>
    <div class="music-box-detail">
        <span class="music-box-title"><%= link_to album.title, album %></span>
        <span>(<%= album.original_year %>)</span>
        <br/>
        <span class="music-box-artist"><%= album.music_artist.name %></span>
        <br/>
        <span>
            <%= album.total_length/60 %> mins &ndash;
            <%= album.track_count %> tracks
            <% if album.release_type %>
                &ndash; <%= album.release_type.capitalize %>
            <% end %>
            <% if album.release_country %>
                [<%= album.release_country %>]
            <% end %>
        </span>
        <br/>
        <span><%= album.music_genres.map { |genre| genre.name }.join(", ") %></span>
    </div>
</div>
